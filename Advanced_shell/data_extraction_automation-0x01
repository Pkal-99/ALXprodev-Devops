#!/bin/bash

# JSON file with the Pok√©mon data
DATA_FILE="data.json"

# Check if the data file exists
if [[ ! -f "$DATA_FILE" ]]; then
    echo "Error: $DATA_FILE not found!"
    exit 1
fi

# Extracting the required fields using jq
name=$(jq -r '.name' data.json | sed 's/.*/\u&/')
height=$(jq -r '.height' "$DATA_FILE")
weight=$(jq -r '.weight' "$DATA_FILE")
type=$(jq -r '.types[0].type.name' "$DATA_FILE")

# Format height and weight for output
formatted_height=$(awk "BEGIN {printf \"%.1f\", $height / 10}")
formatted_weight=$(awk "BEGIN {printf \"%d\", $weight}")

# Construct the output string
output_string="$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."

# Output the result
echo "$output_string"